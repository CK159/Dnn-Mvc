@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage <SampleMVC.Modules.SampleMVC.Models.Settings>

@using DotNetNuke.Web.Mvc.Helpers

<h2 id="dnnSitePanel-BasicSettings" class="dnnFormSectionHead"><a href="" class="dnnSectionExpanded">@Dnn.LocalizeString("BasicSettings")</a></h2>
<fieldset>
    <div class="dnnFormItem">
        <div class="dnnLabel" style="position: relative;">
            @Html.LabelFor(m => Model.Namespace, new { @class = "col-md-2 control-label" })
        </div>
        @Html.TextBoxFor(m => Model.Namespace)
    </div>
    <div class="dnnFormItem">
        <div class="dnnLabel" style="position: relative;">
            @Html.LabelFor(m => Model.Controller, new { @class = "col-md-2 control-label" })
        </div>
        @Html.TextBoxFor(m => Model.Controller)
    </div>
    <div class="dnnFormItem">
        <div class="dnnLabel" style="position: relative;">
            @Html.LabelFor(m => Model.Method, new { @class = "col-md-2 control-label" })
        </div>
        @Html.TextBoxFor(m => Model.Method)
    </div>
</fieldset>

