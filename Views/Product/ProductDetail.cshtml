@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<SampleMVC.Modules.SampleMVC.Controllers.ProductController.ProductDetailModel>

<a href="@Model.BackUrl">&lt; Back to Products</a>

<h1>@Model.ProductName</h1>
<p>Product Details</p>
<hr />

@if (!Model.Active)
{
    <div class="alert alert-danger text-center">
        This product is not currently available. Check back later.
    </div>
}

<div class="detail-rich-desc">
    @Html.Raw(Model.ProductRichDesc)
</div>

<br />
<p class="text-center">
    <button type="button" class="btn btn-primary btn-lg" @(!Model.Active ? "disabled" : "")>Add to Cart</button>
</p>

<p class="text-muted">
    Product added on @Model.DateCreated.ToString("MM/dd/yyyy").<br />
    Product Id: @Model.ProductId.
</p>